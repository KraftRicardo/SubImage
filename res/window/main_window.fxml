<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="editor.windows.MainWindowController">
   <HBox>
      <children>
         <VBox>
            <children>
               <Label text="Cutters">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <VBox.margin>
                     <Insets left="5.0" top="5.0" />
                  </VBox.margin>
               </Label>
               <HBox>
                  <children>
                     <Label prefHeight="25.0" prefWidth="65.0" text="Tiles:">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                        <tooltip>
                           <Tooltip text="Path to folder where the images holding your tiles lie" />
                        </tooltip>
                     </Label>
                     <Label fx:id="tilesFolderPath" prefHeight="25.0" prefWidth="350.0" text="tilesFolderPath" textFill="#0c46cd">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                        <padding>
                           <Insets left="5.0" />
                        </padding>
                        <font>
                           <Font name="System Italic" size="12.0" />
                        </font>
                     </Label>
                     <Button fx:id="setTilesFolderButton" onAction="#setTilesFolder" text="...">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                      <Button fx:id="cutTilesButton" onAction="#cutTiles" text="Cut">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefHeight="25.0" prefWidth="65.0" text="Objects:">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                        <tooltip>
                           <Tooltip text="Path to folder where the images holding your objects lie" />
                        </tooltip>
                     </Label>
                     <Label fx:id="objectsFolderPath" prefHeight="25.0" prefWidth="350.0" text="objectsFolderPath" textFill="#0c46cd">
                        <padding>
                           <Insets left="5.0" />
                        </padding>
                        <font>
                           <Font name="System Italic" size="12.0" />
                        </font>
                     </Label>
                     <Button fx:id="setObjectsFolderButton" onAction="#setObjectsFolder" text="...">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="cutObjectsButton" onAction="#cutObjects" text="Cut">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefHeight="25.0" prefWidth="65.0" text="Animations:">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                        <tooltip>
                           <Tooltip text="Path to folder where the images holding your animations lie" />
                        </tooltip>
                     </Label>
                     <Label fx:id="animationsFolderPath" prefHeight="25.0" prefWidth="350.0" text="animationsFolderPath" textFill="#0c46cd">
                        <padding>
                           <Insets left="5.0" />
                        </padding>
                        <font>
                           <Font name="System Italic" size="12.0" />
                        </font>
                     </Label>
                     <Button fx:id="setAnimationsFolderButton" onAction="#setAnimationsFolder" text="...">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="cutAnimationsButton" onAction="#cutAnimations" text="Cut">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
         <Button fx:id="cutAllButton" onAction="#cutAll" prefHeight="75.0" prefWidth="75.0" text="Cut All">
            <HBox.margin>
               <Insets left="5.0" top="25.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <VBox>
      <children>
         <Label text="Settings">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
               <Insets left="5.0" />
            </VBox.margin>
         </Label>
         <HBox>
            <VBox.margin>
               <Insets left="5.0" />
            </VBox.margin>
         </HBox>
         <HBox>
            <children>
               <Label prefHeight="25.0" prefWidth="65.0" text="Tilesize">
                  <tooltip>
                     <Tooltip text="Define the size of the tile squares. If the input image is not divisable by that number the cutting will no succeed." />
                  </tooltip></Label>
               <TextField fx:id="tileSize" prefHeight="25.0" prefWidth="50.0" promptText="16">
                  <padding>
                     <Insets left="5.0" />
                  </padding>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets></TextField>
            </children>
            <VBox.margin>
               <Insets left="5.0" />
            </VBox.margin>
         </HBox>
         <HBox>
            <children>
               <Label prefHeight="25.0" prefWidth="65.0" text="Filter Mode">
                  <tooltip>
                     <Tooltip text="0: No filter, 1: filter (0,0) pixel color, 2: filter (width-1, height-1) pixel color" />
                  </tooltip></Label>
               <TextField fx:id="filterMode" prefHeight="25.0" prefWidth="50.0" promptText="0">
                  <padding>
                     <Insets left="5.0" />
                  </padding>
               </TextField>
            </children>
            <VBox.margin>
               <Insets left="5.0" />
            </VBox.margin>
         </HBox>
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Console">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
               <Insets left="5.0" />
            </VBox.margin>
         </Label>
         <Label alignment="TOP_LEFT" prefHeight="150.0" prefWidth="600.0" text="No erros yet" textFill="#da0000" wrapText="true">
            <VBox.margin>
               <Insets left="5.0" right="5.0" />
            </VBox.margin>
            <tooltip>
               <Tooltip text="The text here shows you when erros happen" />
            </tooltip>
         </Label>
      </children>
   </VBox>
</VBox>
